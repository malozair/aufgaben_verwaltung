<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:padding="16dp">

    <EditText
        android:id="@+id/person_name_input"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="16dp"/>

    <EditText
        android:id="@+id/person_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/person_name_input"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@drawable/edittext_bg"
        android:paddingLeft="16dp"/>

    <Button
        android:id="@+id/save_person_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/person_email_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/person_email_input" />
    />

</RelativeLayout>
